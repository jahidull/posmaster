<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/tourmate_border_expense"
    android:layout_height="match_parent"
    tools:context="com.refresh.pos.ui.ResetEmailActivity">
    <TextView
        android:text="Verify your Email"
        android:textColor="#fff"
        android:textSize="25sp"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/resetEt"
        android:layout_width="250dp"
        android:textColorHint="#fff"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/resetEmailEt"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="#11a3a0a0"
            android:drawableStart="@drawable/tourmate_ic_action_user"
            android:ems="10"
            android:textColor="#fff"
            android:hint="Enter Email"
            android:textStyle="bold"
            android:inputType="textEmailAddress"
            android:textSize="16dp"
            android:fontFamily="serif"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        app:cardBackgroundColor="#1d2391"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp"
        android:layout_gravity="center"
        android:id="@+id/btnResetEmail"
        android:onClick="onResetEmail"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="31dp"
        android:layout_below="@+id/pass_text_input_layout"
        android:layout_centerHorizontal="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Send"
                android:textStyle="bold"
                android:textColor="#fff"
                android:textSize="18sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>